mixin checkbox(props)
  -
    const randomId = (length = 12) => {
      return Math.random().toString(36).substring(2, length + 2);
    };

  label.checkbox&attributes(attributes)
    input.checkbox__input(
      type= 'checkbox'
      id= props.hasId && randomId()
      name= props.name
      value= props.value
      required= props.required
      checked= props.checked
    )
    span.checkbox__box
      span.checkbox__box-border
      +svg('checkmark').checkbox__icon

    if props.text
      span.t2-lhl.checkbox__text!= props.text
