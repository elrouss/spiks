mixin radio-with-icon(props)
  label.radio-with-icon&attributes(attributes)
    input.radio-with-icon__input(
      type= 'radio'
      id= props.id
      name= props.name
      value= props.value
      required= props.required
      checked= props.checked
    )

    if props.icon
      +svg(props.icon).radio-with-icon__icon

    if props.icons
      span.radio-with-icon__icon.radio-with-icon__icon_multiple
        each icon in props.icons
          +svg(icon.name)(
            class= icon.isBig && 'radio-with-icon__icon radio-with-icon__icon_big'
          )

    if props.text
      span.t2.radio-with-icon__text!= props.text